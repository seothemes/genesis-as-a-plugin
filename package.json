{
	"name": "genesis",
	"description": "Development files for the Genesis Framework.",
	"repository": {
		"type": "git",
		"url": "https://github.com/studiopress/genesis"
	},
	"license": "GPL-2.0-or-later",
	"private": true,
	"dependencies": {
		"superfish": "1.7.10"
	},
	"devDependencies": {
		"@11ty/eleventy": "^0.8.3",
		"@11ty/eleventy-plugin-syntaxhighlight": "^2.0.1",
		"@wordpress/scripts": "^3.3.0",
		"axios": "^0.19.0",
		"compare-versions": "^3.4.0",
		"cssnano": "^4.1.4",
		"cssnano-preset-advanced": "^4.0.2",
		"eslint": "^5.6.0",
		"eslint-config-wordpress": "^2.0.0",
		"markdown-it": "^8.4.2",
		"markdown-it-anchor": "^5.0.2",
		"mkdirp": "^0.5.1",
		"node-sass": "^4.12.0",
		"npm-run-all": "^4.1.5",
		"postcss-cli": "^6.1.2",
		"rimraf": "^2.6.3",
		"stylelint": "^9.5.0",
		"stylelint-config-wordpress": "^13.1.0",
		"uglify-js": "^3.4.9",
		"widont": "^0.2.0"
	},
	"scripts": {
		"addtextdomain": "wpi18n addtextdomain --exclude=vendor,node_modules",
		"build": "run-s build:css build:js",
		"build:css": "postcss lib/css/admin{,-rtl}.css --use cssnano --dir=lib/css --ext min.css --verbose",
		"build:js": "run-s build:js:original build:js:webpack",
		"build:js:original": "node ./bin/uglify.js",
		"build:js:webpack": "wp-scripts build",
		"clean:js": "rimraf ./lib/js/build/*",
		"copyassets": "node ./bin/copyassets.js",
		"docs": "run-s docs:clean docs:css docs:eleventy",
		"docs:dev": "run-p docs:css-watch docs:eleventy-server",
		"docs:clean": "rimraf docs/_site",
		"docs:eleventy": "npx eleventy --pathprefix=genesis",
		"docs:eleventy-server": "npx eleventy --serve",
		"docs:css": "node-sass docs/sass/main.scss docs/css/style.css --output-style compressed",
		"docs:css-watch": "node-sass -w docs/sass/main.scss docs/css/style.css --output-style compressed --source-map true",
		"lint:css": "stylelint \"lib/css/admin.css\" \"lib/css/admin-rtl.css\"",
		"lint:css:fix": "stylelint \"lib/css/admin.css\" \"lib/css/admin-rtl.css\" --fix",
		"lint:js": "eslint .",
		"postinstall": "npm run copyassets",
		"start": "wp-scripts start",
		"translations": "rimraf ./lib/languages/*.{mo,po} && node ./bin/translations.js",
		"zip": "run-s zip:develop zip:master",
		"zip:develop": "rimraf ./zips/genesis-develop.zip && mkdirp ./zips && git archive develop --prefix=genesis/ --output=./zips/genesis-develop.zip",
		"zip:master": "rimraf ./zips/genesis-master.zip && mkdirp ./zips && git archive master --prefix=genesis/ --output=./zips/genesis-master.zip",
		"makepot": "composer makepot"
	},
	"browserslist": [
		"> 1%",
		"ie >= 11",
		"last 1 Android versions",
		"last 1 ChromeAndroid versions",
		"last 2 Chrome versions",
		"last 2 Firefox versions",
		"last 2 Safari versions",
		"last 2 iOS versions",
		"last 2 Edge versions",
		"last 2 Opera versions"
	],
	"glotpress": {
		"url": "https://translate.studiopress.com/global/",
		"slug": "genesis/genesis",
		"textdomain": "genesis",
		"fileFormat": "lib/languages/%wpLocale%.%format%",
		"formats": [
			"po",
			"mo"
		],
		"filters": {
			"minimumPercentage": 30
		}
	},
	"cssnano": {
		"preset": "advanced"
	},
	"theme": {
		"name": "Genesis",
		"uri": "http://www.genesisframework.com/",
		"description": "The industry standard for Premium WordPress Themes.",
		"author": "StudioPress",
		"authoruri": "https://www.studiopress.com/",
		"version": "3.1.2",
		"tags": "black, orange, white, one-column, two-columns, three-columns, left-sidebar, right-sidebar, responsive-layout, custom-menu, full-width-template, rtl-language-support, sticky-post, theme-options, threaded-comments, translation-ready",
		"license": "GPL-2.0-or-later",
		"licenseuri": "https://www.gnu.org/licenses/old-licenses/gpl-2.0.html",
		"textdomain": "genesis"
	}
}
